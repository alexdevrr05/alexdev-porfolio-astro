---
import Layout from '../layouts/Layout.astro';

import {
  Badge,
  SocialBanner,
  MainSectionContainer,
} from '../components/index.astro';

// Icons:
import {
  GitHubIcon,
  MailIcon,
  LinkedInIcon,
} from '../components/icons/index.astro';
---

<Layout
  title='Portfolio de Alexdev - Desarrollador Web con más de 2 años de experiencia'
  description='Disponible para trabajar. Desarrollador frontend. Ingeniero en Sistemas Computacionales'
>
  <main>
    <MainSectionContainer class='py-44 pb-32'>
      <img
        class='rounded-full size-12 mb-4'
        src='/ar-icon.svg'
        alt='ar icon '
      />
      <h1
        class='text-gray-900 dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10'
      >
        Epa! Soy Alex<a
          href='https://linkedin.com/in/alexdevrr'
          target='_blank'
          rel='noopener'
          class='flex justify-center items-center'
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <!-- TODO: Adaptar los colores -->
      <h2
        class='text-xl lg:text-2xl text-balance max-w-[700px] text-black dark:text-white'
      >
        <span>+2 años de experiencia.</span><span
          class='text-yellow-800 dark:text-yellow-200'
        >
          Desarrollador de Software</span
        >.
        <span class='text-red-800 dark:text-red-200'>
          De Puerto Vallarta, México</span
        >.
        <span class='text-sky-800 dark:text-sky-200'
          >Especializado en el desarrollo frontend.</span
        >
      </h2>
      <nav class='flex gap-4 mt-8 flex-wrap'>
        <SocialBanner href='https://linkedin.com/in/alexdevrr'>
          <LinkedInIcon class='size-4 md:size-6' />
          LinkedIn
        </SocialBanner>
        <SocialBanner href='https://github.com/alexdevrr05'>
          <GitHubIcon class='size-4 md:size-6' />
          GitHub
        </SocialBanner>
        <SocialBanner href='mailto:alexkey0516@gmail.com'>
          <MailIcon class='size-4 md:size-6' />
          alexkey@gmail.com
        </SocialBanner>
      </nav>
    </MainSectionContainer>
  </main>
</Layout>

