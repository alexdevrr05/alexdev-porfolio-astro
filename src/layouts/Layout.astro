---
import '@fontsource-variable/onest';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content={description} />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />

    <!-- GA -->
    <!-- Google tag (gtag.js) -->
    <!-- <script async src='https://www.googletagmanager.com/gtag/js?id=G-QLM1CST0RH'
     ></script>
     <script is:inline>
       window.dataLayer = window.dataLayer || [];
       function gtag() {
         dataLayer.push(arguments);
       }
       gtag('js', new Date());
       gtag('config', 'G-QLM1CST0RH');
     </script> -->

    <!-- GTM -->
    <script is:inline>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ 'gtm.start': new Date().getTime(), event: 'gtm.js' });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != 'dataLayer' ? '&l=' + l : '';
        j.async = true;
        j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, 'script', 'dataLayer', 'GTM-5JKB6JSK');
    </script>
  </head>

  <body class='relative text-darkGray dark:text-white'>
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src='https://www.googletagmanager.com/ns.html?id=GTM-5JKB6JSK'
        height='0'
        width='0'
        style='display:none;visibility:hidden'></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <!-- bg-[radial-gradient(ellipse 80% 80% at 70% -30%,rgba(39,196,245,0.4),rgba(255,255,255,0))] -->
    <div
      class='absolute
       top-0
       bottom-0
       z-[-2]
       min-h-screen
       w-full
       bg-[radial-gradient(ellipse_80%_80%_at_70%_-30%,rgba(39,196,245,0.4),rgba(255,255,255,0))]
       dark:bg-[radial-gradient(ellipse_80%_80%_at_70%_-30%,rgba(44,111,213,0.3),rgba(255,255,255,0))]
       dark:bg-neutral-950'
    >
    </div>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      :root {
        color-scheme: light dark;
      }

      html {
        font-family: 'Onest', system-ui, sans-serif;
        scroll-behavior: smooth;
      }

      body {
        color: rgba(17, 17, 17, 0.9);
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        overscroll-behavior: none;
      }
      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
      }

      @media (prefers-color-scheme: dark) {
        body {
          color: rgba(255, 255, 255, 0.9);
        }
      }

      .link-active {
        @apply bg-white/40 font-semibold dark:bg-white/15 shadow-lg shadow-primary/20 backdrop-blur-2xl;
      }
    </style>
  </body>
</html>
